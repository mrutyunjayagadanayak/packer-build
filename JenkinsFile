pipeline {
    agent any

    tools {
        terraform "terraform-default"
    }

    stages {
        
        stage('Git Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/mrutyunjayagadanayak/packer-build'
            }
        }

        stage('Terraform Init') {
            steps {
                sh 'terraform init'
            }
        }

        stage('Terraform apply') {
            steps {
                sh 'terraform apply --auto-approve'
            }
        }

        stage('Packer Build') {
            steps {
                sh 'packer build example2.json'
            }
        }
    }
}